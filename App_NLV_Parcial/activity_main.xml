<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#F8F8F8"
  android:padding="24dp"
  tools:context=".MainActivity">


  <com.google.android.material.card.MaterialCardView
    android:id="@+id/card_view_main"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_max="400dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="32dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:text="Conversor de divisas"
        android:textColor="#333333"
        android:textSize="28sp"
        android:textStyle="bold" />

      <!-- Input -->
      <LinearLayout
        android:id="@+id/input_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:text="Monto a convertir"
          android:textColor="#555555"
          android:textSize="14sp" />

        <EditText
          android:id="@+id/et_amount"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_input_bg"
          android:hint="0.00"
          android:inputType="numberDecimal"
          android:paddingHorizontal="16dp"
          android:paddingVertical="12dp"
          android:textSize="16sp" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="Divisa de origen"
          android:textColor="#555555"
          android:textSize="14sp" />
        <Spinner
          android:id="@+id/spinner_from"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_spinner_bg"
          android:paddingHorizontal="12dp"
          android:paddingVertical="12dp"
          android:layout_marginTop="8dp"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="Divisa de destino"
          android:textColor="#555555"
          android:textSize="14sp" />
        <Spinner
          android:id="@+id/spinner_to"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_spinner_bg"
          android:paddingHorizontal="12dp"
          android:paddingVertical="12dp"
          android:layout_marginTop="8dp"/>

        <Button
          android:id="@+id/btn_convert"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:background="@drawable/rounded_button_bg"
          android:paddingVertical="12dp"
          android:text="Convertir"
          android:textColor="@android:color/white"
          android:textSize="16sp"
          android:textStyle="bold" />

      </LinearLayout>

      <!-- Resultado -->
      <LinearLayout
        android:id="@+id/result_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginBottom="16dp"
          android:text="Monto convertido"
          android:textColor="#333333"
          android:textSize="18sp"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/tv_converted_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginBottom="24dp"
          android:text="0.00"
          android:textColor="#6A1B9A"
          android:textSize="36sp"
          android:textStyle="bold" />

        <Button
          android:id="@+id/btn_reset"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/reset_btn_bg"
          android:paddingVertical="12dp"
          android:text="Convertir de nuevo"
          android:textColor="@color/white"
          android:textSize="16sp"
          android:textStyle="bold" />

      </LinearLayout>


      <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:visibility="gone" />

    </LinearLayout>
  </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
